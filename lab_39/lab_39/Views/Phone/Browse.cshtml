@model   IEnumerable<lab_39.Models.Item>
@{
    Layout = null;
    
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <a href="Phone/Add">Add</a>
        <br/>
        <table class="table">
            <tr>
                <th>Surname</th>
                <th>Middlename</th>
                <th>Firstname</th>
                <th>Birthday</th>
                <th>Phone</th>
                <th></th>
            </tr>
            

            @foreach (lab_39.Models.Item item in Model)
            {
                <tr>
                    <td>@item.Surname</td>
                    <td>@item.Middlename</td>
                    <td>@item.Firstname</td>
                    <td>@item.BDay</td>
                    <td>@item.Phone</td>
                    <td>
                        @Html.ActionLink("Update", "Update", "Phone", new { id=item.Id}, null)
                        @Ajax.ActionLink("Delete", "Delete", new { id = item.Id}, new AjaxOptions { HttpMethod="POST"})
                    </td>
                </tr>
            }
        </table>
        <br/>
    </div>
</body>
</html>
